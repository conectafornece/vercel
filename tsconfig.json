{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist" // Diretório de saída para os arquivos compilados
  },
  "include": ["api/**/*.ts"], // Inclui os arquivos da pasta api
  "exclude": ["node_modules"]
}
